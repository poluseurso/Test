<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <title>title</title>
    <link rel="stylesheet" type="text/css" href="api.css"/>
    <style>
        body{
           font-family: "微软雅黑"; 
           background-color: #FFF; 
        }
        * {
            padding:0px;
            margin: 0px;
        }
        .clearfix:after {content:"";display:block;height:0px;clear:both;}
        .clearfix {zoom:1;}
        .top {
        	height: 45PX;
        	width: 100%;
        	position: relative;
        }
        .font_return {
        	position: absolute;
        	top:0px;
        	left:15px; 
        	font-size: 32px;
        	color: #FF6633; 
        }
        .title {
        	width: 100%;
        	height: 45px;
			float: left;
			margin:0px auto;
			text-align:center;
			line-height:45px;
			font-size: 16px;
        }
        .guanZhu {
        	position: absolute;
        	width: 80px;
        	height: 32px;
        	margin-top: 4px;
        	margin-bottom: 10px;
        	top:2px;
        	right:15px; 
        	border-radius: 10px;
        	background-color: #FF6633;
        	text-align:center;
			line-height:32px;

        }
        .fengGeXian {
        	width: 100%;
        	height: 1px;
        	background-color: #efefef;
        }

        .bottom {
        	width: 100%;
        	height: 47px;
        	position: absolute;
        	bottom: 0px;
        	background-color: #fff;
        	z-index: 10;
        }
        .function {
        	position: absolute;
        	width: 100%;
        	top: 9px;
        	left: 9px;
        	height: 29px;
        	
        }
        .write {
        	position: absolute;
        	width: 45%;
        	height: 26px;
        	top:0px;
        	left:0px;
        	border:1px solid #ccc;
        	border-radius: 19px;
        	text-align:center;
			line-height:26px;
        	color: #ccc;
        	font-size: 14px;

        }
        .pingLun img {
        	position: absolute;
        	width: 30px;
        	height: 30px;
        	top: 0px;
        	right:130px;	
        }
        .dianZan img {
        	position: absolute;
        	width: 30px;
        	height: 30px;
        	top: 0px;
        	right:75px;	
        }
        .FenXiang img {
        	position: absolute;
        	width: 20px;
        	height: 20px;
        	top: 4px;
        	right:30px;	
        }
    </style>
</head>
<body>
    <div class="top" id="header">
    	<div class="font_return" onclick="copyText()"><</div>
    	<div class="title">早餐</div>
    	<div class="guanZhu">关注</div>
    </div>
    <div class="fengGeXian"></div>
    
    <div class="bottom">
    	<div class="fengGeXian"></div>
    	<div class="function">
    		<div class="write">写评论.....</div>
    		<div class="pingLun"><img src="../image/3-1(4).png"></div>
    		<div class="dianZan"><img src="../image/3-1(5).png"></div>
    		<div class="FenXiang"><img src="../image/3-1(3).png"></div>
    	</div>
    </div>
</body>
<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript" src="../script/APICloud-rest-SHA1.js"></script>
<script type="text/javascript" src="../script/jquery-3.2.1.min.js"></script>
<script type="text/javascript">
    apiready = function(){
        var header = $api.byId('header');
        var headerH = $api.offset(header).h;
        $api.fixStatusBar(headerH);
        var main_height = api.winHeight-95;
        api.openFrame({
            name: 'xiangQing-frame',
            url: '../frame/xiangQing-frame.html',
            rect: {
                x: 0,
                y: headerH,
                w: 'auto',
                h: main_height
            },
            animation:{
                type:'none',
                duration:300               
            },
            pageParam: {
                name: 'value'
            },
            bounces: false
        });
    };
    function copyText()
    {
        api.openWin({
        name: 'shiLing',
        url: './shiLing.html',
        pageParam: {
            name: 'test'
             }
        });
    }
</script>
</html>