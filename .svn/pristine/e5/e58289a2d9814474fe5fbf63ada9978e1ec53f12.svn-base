<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <title>title</title>
    <link rel="stylesheet" type="text/css" href="api.css"/>
    <style>
        body{
        	font-family: "微软雅黑";
        	opacity:1;
			filter:alpha(opacity=0);
        }
        * {
        	margin: 0px;
        	padding: 0px;
        }
        .content {
        	position: fixed;
        	bottom: 0px;
        	width: 100%;
        	height: 430px;
        	/*background: #CCC;*/
        	border-top: 0px solid #f2f2f2;
        	opacity:1;
			filter:alpha(opacity=0);
        }
        .kongbai {
            width: 100%;
            height: 280px;
            opacity:0;
            filter:alpha(opacity=100);
        }
        .bg {
            background: #ff6633;
            padding-bottom: 10px;
        }
       /* .colse {
            width: 100%;
            height: 20px;

        }*/
      /*  .juzhong {
            
            margin: 0px auto;
            width: 50px;
            height: 20px;
        }*/
     /*   .juzhong img {
            width: 50px;
            height: 20px;
        }*/
        .shuru {
        	width: 75%;
        	height: 30px;
        	margin-left: 15px;
        	margin-top: 10px;
        	border-radius: 30px;
        	border:0px;
            outline: none; 
            text-indent: 18px;
            font-size: 16px;
            padding-left: 7px;
            padding-right: 7px;
            /*background: #3a6;*/
            display: inline;

        }
        .fabu {
        	display: inline;
        	padding-left:10px;
        	color: #fff;
        }
       /* .miaoshu {
        	font-size: 16px;
        	margin-top: 10px;
        	margin-left: 25px;
        }*/
    </style>
</head>
<body >
    <div class="content">
        <div class="kongbai" onclick="colsepage()"></div>
        <div class="bg">
            <!-- <div class="colse" onclick="colsepage()"><div class="juzhong"><img src="../icon/xiangxiaclose.png"></div></div> -->
        	<input class="shuru" id="shuru" type="text" name="shuru"  placeholder="欢迎撰写优质评论";> 
        	<div class="fabu" onclick="getWenZi(page_id,userid)" >发布</div>
        	<!-- <div class="miaoshu">食域出品·欢迎参与</div> -->
        </div>
    </div>
</body>
<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript" src="../script/APICloud-rest-SHA1.js"></script>
<script type="text/javascript" src="../script/doT.js"></script>
<script type="text/javascript" src="../script/jquery-3.2.1.min.js"></script>
<script type="text/javascript" src="../script/APP_INFO.js"></script>
<script type="text/javascript">
	var page_id;
    var userid=$api.getStorage('user_info');
    apiready = function(){
			page_id=api.pageParam.id;
            // alert(userid.id);

    };
    function getWenZi(page_id,userid) {
    	var wen=document.getElementById("shuru");
    	var wenzi=wen.value;
    	var client = new Resource(APP_INFO.app_id, APP_INFO.app_key);
		var Model = client.Factory("comment");
			Model.save({
			    "articleId": page_id,
			    "authorId": userid.id,
			    "content": wenzi
			}, function(ret,err){
			    if(err){
			        //处理错误 err
			        alert("查询失败"+JSON.stringify(err)); 
			    }else{
			        //处理数据 ret
			       alert("查询成功"+JSON.stringify(ret)); 

			    }
			})
		colsepage();
    }
    function colsepage(){
		api.closeFrame({
		    name: 'xiangqing-pinglun-frame'
		});
    }
</script>
</html>