        }
        .shiyuan .pic img {
            width: 25px;
            height: 25px;

        }
      </style>
  </head>
  <body>
    <div class="wrap">
        <div class="header" id="header"></div>
      <div id="foot">
        <div class="bottom1" onclick="settaber(0)">
            <div class="shise" >
                <div class="pic"><img src="../icon/unfood.png"></div>
                <div class="fonts">食色</div>
            </div>
        </div>
        <div class="bottom2" onclick="settaber(1)">
            <div class="shiyun">
                <div class="pic"><img src="../icon/uncooker.png"></div>
                <div class="fonts">食韵</div>
            </div>
        </div>
        <div class="bottom3" onclick="settaber(2)">
            <div class="shiling">
                <div class="pic"><img src="../icon/unold.png"></div>
                <div class="fonts">食灵</div>
            </div>
        </div>
        <div class="bottom4">
            <div class="shiyuan">
                <div class="pic"><img src="../icon/bool.png"></div>
                <div class="fonts">食源</div>
            </div>
        </div>
    </div>
    </div>
  </body>
<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript" src="../script/APICloud-rest-SHA1.js"></script>
<script type="text/javascript" src="../script/jquery-3.2.1.min.js"></script>
  <script type="text/javascript">
      apiready = function(){
         var header = $api.byId('header');
        var headerH = $api.offset(header).h;
        var footer = $api.byId('foot');
        var footerH = $api.offset(footer).h;
        $api.fixStatusBar(headerH);
        var main_height = api.winHeight-95;
        api.openFrame({
            name: 'Shiyuan_frame',
            url: '../frame/Shiyuan_frame.html',
            rect: {
                x: 0,
                y: headerH,
                w: 'auto',
                h: api.winHeight-headerH-footerH-1
            },
            animation:{
                type:'none',
                duration:300
            },
            pageParam: {
                name: 'value'
            },
            bounces: false
        });


    };

    function settaber(_index){
      api.setFrameGroupIndex({
      name: 'taber',
      index: _index
        });
    }

  </script>
  </html>
