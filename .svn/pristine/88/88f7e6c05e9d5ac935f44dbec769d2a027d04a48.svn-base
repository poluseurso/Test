			    		<div class="shoujia">
			    			<img src="../icon/buy.png" alt="" id="shoujia">
			    		</div>
			    		<div class="pingfenshoujia">
			    			<p>评分:{{=value.PingFen}}</p>
			    			<p>售价:{{=value.pri}}</p>
			    		</div>
			    	</div>
		    	</div>
    		</li>
    		<div class="kong"></div>
        {{~}}
    </script>
<script type="text/javascript">
    apiready = function(){
    	var UIScrollPicture = api.require('UIScrollPicture');
		UIScrollPicture.open({
		    rect: {
		        x: 20,
		        y: 90,
		        w: api.winWidth-40,
		        h: 150,

		    },
		    data: {
		        paths: [
		            'widget://image/meat1.jpg',
		            'widget://image/axbd.jpg',
		            'widget://image/tcpg.jpg',
		            'widget://image/tytws.jpg'

		        ],
		        captions: ["青椒肉丝","可爱便当","红烧肉","小点心"]

		    },
		    styles: {
		        caption: {
		            height: 35,
		            color: '#fff',
		            size: 13,
		            bgColor: "rgba(0,0,0,0.4)",
		            position: 'overlay',
		            index:4
		        },

		    },
		    placeholderImg: 'widget://image/meat1.jpg',
		    contentMode: 'scaleToFill',
		    interval: 3,
		    fixedOn: api.frameName,
		    loop: true,
		    fixed: false
		}, function(ret, err) {
		    if (ret) {
		        // alert(JSON.stringify(ret));
		    } else {
		        // alert(JSON.stringify(err));
		    }
		});

		var client = new Resource(APP_INFO.app_id, APP_INFO.app_key);
		var Model = client.Factory("caipu");
		Model.query(
		{
		    "filter":{
		        "fields":{"id": true,"img":true,"WenZi":true,"pri":true,"userID":true,"PingFen":true,"FengMian":true},
		         "include":"userIDPointer",//或者["id","make","model"]
            order: "createdAt DESC"
		    }
		}
		, function(ret,err){
		    if(err){
		    	 alert(JSON.stringify(err));
		    }else{
		    	 alert(JSON.stringify(ret));
		        var interation = doT.template( $('#articleTemp').html() );
		        //将数据显示到网页中
		        // alert(interation( ret ));
            $( '#articleList-box' ).append(interation( ret ));
		    }
		})


    };
    var t=true;
