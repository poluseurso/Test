<!DOCTYPE html>
  <html>
  <head>
      <meta charset="utf-8">
      <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
      <title>title</title>
      <link rel="stylesheet" type="text/css" href="../css/api.css"/>
      <style>
          body{

          }

          #header{
            background: #ff6633;
            font-size: 16px;
            text-align: center;
            width: 100%;
            height: 45px;
            line-height: 45px;
          }

          #back{
            width: 22px;
            height: 22px;
            margin-left: 30px;
          }
      </style>
  </head>
  <body>
    <div id="header">
      <div id="back" onclick="back()">
        <img src="../icon/back_black.png" alt="" width="22px" height="22px">
      </div>
      文章详情
    </div>
  </body>
  <script type="text/javascript" src="../script/api.js"></script>
  <script type="text/javascript">
      apiready = function(){
        var header = $api.byId('header');
        var headerH = $api.offset(header).h;
        api.openFrame({
            name: 'txtdetail_frame',
            url: '../frame/txtdetail_frame.html',
            rect: {
                x: 0,
                y: headerH,
                w: 'auto',
                h: api.winHeight-headerH
            },
            pageParam: {
                name: 'test'
            },
            bounces: false,
            bgColor: 'rgba(0,0,0,0)',
            vScrollBarEnabled: true,
            hScrollBarEnabled: true
        });

        function back(){
          api.closeWin({
              name: 'txtdetail'
          });

        }
      };
  </script>
  </html>
