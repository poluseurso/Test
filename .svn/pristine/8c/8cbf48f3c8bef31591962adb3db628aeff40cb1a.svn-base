        margin: 0 auto; 
        margin-top: 10px;
    }
    .img_border img {
        width: 45px;
        height: 45px;
        border-radius: 50%;
    }

    .me p {
        width: 100%;
        height: 30px;
        line-height: 30px;
        font-size: 12px;
        text-align: center;
        color: #ccc;
    }

    .cut_line {
        width: 100%;
        height: 10px;
        background: #e2e2e2;
    }

    .show_num {
        width: 100%;
        height: 60px;
    }

    .big_word {
        width:  100%;
        height: 25px;
        line-height: 38px;
        color: #ff6633;
        text-align: center;
        font-size: 18px;
    }

     .small_word {
        width:  100%;
        height: 25px;
        line-height: 38px;
        color: #ff6633;
        text-align: center;
        font-size: 16px;

