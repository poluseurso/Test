    <script id="articleTemp" type="text/x-dot-template">
        {{~it:value:index}}
            <div id="txt" onclick='showById("{{= value.id }}","{{= value.author.nickName}}","{{= value.createdAt}}")'>
              <div id="people">
                <div id="userimg">
                  <img src={{= value.author.headimage}} alt="" width="25px" height="25px">
