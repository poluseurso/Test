<!DOCTYPE HTML>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0, minimum-scale=1.0, user-scalable=0, initial-scale=1.0, width=device-width" />
    <meta name="format-detection" content="telephone=no, email=no, date=no, address=no">
    <title>Hello APP</title>
    <link rel="stylesheet" type="text/css" href="../css/api.css" />
    <style>
         *{
    padding: 0rem;
    margin: 0rem;
    list-style: none;
    text-decoration: none;
    }

    html{
    font-size: 20px;
    }

    .header {
    width: 100%;
    height: 48px;
    border-bottom: 1px solid #ccc;
    position: relative;
    }

    .header img {
    width: 22px;
    height: 22px;
    position: absolute;
    left: 15px;
    top: 13px;
    }

    .header p {
    width: 100%;
    height: 48px;
    line-height: 48px;
    color: #ff6633;
    font-family: 微软雅黑;
    font-size: 16px;  
    text-align: center;

    }

    .header .guanli {
    width: 25px;
    height: 49px;
    line-height: 49px;
    position: absolute;
    right:15px;
    color: #ff6633;
    top: 0px;
    font-size: 12px;
    }
    .back_color {
        background-color: #ff6633;
    }
    .zhuangtai_color {
        background-color: #ff6633;
    }
    .daohang_color {
        background-color: white;
    }

    .font_color_main {
        color: #ff6633;
    }

    .font_color_ccc {
        color: #ccc;
    }

    .font_size_14 {
        font-size: 0.7rem;
    }

    .font_size_12 {
        font-size: 0.6rem;
    }

    .font_size_16 {
        font-size: .8rem;
    }

    .head {
        width: 100%;
        height: 2.45rem;
    }

    .left {
        position: relative
        width: .75rem;
        height: .75rem;
        display: inline-block;
        margin: 1rem 0rem 0rem .75rem;
    }

    .title {
        position: absolute;
        left:43%;
        line-height: 2.45rem;
    }

    .share {
        position: absolute;
        right: .75rem;
        padding-right: .75px;
        line-height: 2.45rem;
    }

    .caozuo {
        text-align: center;
        margin-top: .5rem;
        padding-top: 10px;
        /*margin-bottom: 1rem;*/
        position: fixed;
        bottom: 0px;
        left: 0px;
        background: #fff;
        width: 100%;
        height: 30px;
        font-size: 24px;
    }

    .shu {
        color: #ff6633;
        margin: 0 1rem;
    }

    .img_1 {
        background-image: url(../icon/take1.png);
    }

    .img_2 {
        background-image: url(../icon/update.png);
    }

    .img_3 {
        background-image: url(../icon/money.png);
    }
    
    .font_size_14 {
        font-size: 0.7rem;
    }

    .font_size_12 {
        font-size: 0.6rem;
    }

    .font_size_16 {
        font-size: .8rem;
    }

    </style>
</head>

<body>
    <div class="wrap">
        <div class="header" id="header">
          <img src="../icon/back_orange.png" id="back">
          <p>菜谱详情</p>
          <p class="guanli">分享</p>
        </div>
        <div class="content">
        </div>
    </div>
    <div class="caozuo">
        <span class="shou img_1 font_size_16">收藏</span>
        <span class="shu">|</span>
        <span class="shou img_2 font_size_16">上传</span>
        <span class="shu">|</span>
        <span class="shou img_2 font_size_16">已购买</span>
    </div>
</body>
<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript">
    apiready = function() {
       headerH = $api.offset(header).h;
        $api.fixStatusBar(headerH);
        var main_height = api.winHeight;
        api.openFrame({
            name: 'Shiyun_xuanzhong_yes_frame',
            url: '../frame/Shiyun_xuanzhong_yes_frame.html',
            rect: {
                x: 0,
                y: headerH,
                w: 'auto',
                h: main_height
            },
            animation:{
                type:'none',
                duration:300               
            },
            pageParam: {
                name: 'value'
            },
            bounces: false
        });
    };
</script>

</html>
